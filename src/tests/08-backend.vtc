varnishtest "Test cookie vmod in vcl_backend_*"

server s1 {
       rxreq
       txresp
} -start

varnish v1 -vcl+backend {
	import cookie from "${vmod_topbuild}/src/.libs/libvmod_cookie.so";

	sub vcl_backend_fetch {
		cookie.set("cookie1", "cookie1BAD");
	}

	sub vcl_backend_response {
		set beresp.http.X-foo = cookie.get_string();
		cookie.clean();
		set beresp.http.X-bar = cookie.get_string();
	}

} -start

client c1 {
	txreq
	rxresp
	expect resp.http.X-foo == "cookie1=cookie1BAD;"
	expect resp.http.X-bar == ""
} -run
